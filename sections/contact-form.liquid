<div class="flex flex-col items-center my-5">
    {% if section.settings.title != blank %}
        <h1 class="text-3xl font-medium text-center my-4 md:my-12">{{ section.settings.title }}</h1>
    {% endif %}
    {% form 'contact' %}
       
        {% if form.errors %}
            <div class="border p-5">
               <div class="flex flex-row items-center w-full my-3">
                   <div class="text-red-500">
                        icon failed
                   </div>
                   <div class="text-sm font-medium ml-3">
                        Oh no! Your Message was not sent
                   </div>
               </div>
               <ul class="px-4 mb-3 ml-7 list-decimal">
                  {% for error in form.errors %}
                    <li><span>{{ form.errors.messages[error] }}</span></li>
                  {% endfor %}
               </ul>
            </div>
        {% elsif form.posted_successfully? %}
                <p class="text-green-500">Message sent successfully</p>
        {% endif %}
        
      <div class="flex max-auto justify-center px-1 mb-3">
         <div class="px-3 w-1/2">
                <label for="Contacontact_namectFormName">Name</label>
                <input class="border px-4 py-3 text-gray-500 w-full" type="text" id="contact_name" name="contact[name]">
         </div>
         <div class="px-3 w-1/2">
                <label for="contact_email">Email</label>
                <input class="border px-4 py-3 text-gray-500 w-full" type="email" id="contact_email" name="contact[email]">
         </div>
         </div>
         <div class="flex px-1 mb-3">
            <div class="px-3 w-full">
                <label for="contact_message">Message</label>
                <textarea class="border px-4 py-3 text-gray-500 w-full" name="contact[body]" id="contact_message"></textarea>
        
            </div>
        </div>

        <div class="flex px-1 mb-3">
            <div class="px-3 w-full">
                <input class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 w-full" type="submit" value="Submit Message">
            </div>
        </div>
     
       

      

        
      
     
    {% endform %}

</div>

{% schema %}
{
    "name": "Contact Form",
    "settings":[
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        }
    ],
"presets": [
    {
        "name": "Contact Form"
    }
]
}
{% endschema %}