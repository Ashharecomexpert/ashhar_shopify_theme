{% comment %} <h1>{{'general.404.title' | t }}</h1>
<p>{{'general.404.subtext_html' | t }}</p> {% endcomment %}
<div class="max-w-md mx-auto">
    <h1 class="text-5xl font-bold my-4 text-red-500">{{ section.settings.title }}</h1>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtext }}</p>
    </div>
    <div class="my-4">
        {% if section.settings.button_url == blank %}
         {% assign shop_url = shop.secure_url %}   
         {% else %}
         {% assign shop_url = section.settngs.button_url %}
        {% endif %}
        <a href="{{shop_url}}" class="bg-green-500 hover:bg-green-800 text-white px-4 py-2">{{section.settings.button_label}}</a>
    </div>
</div>


{% schema %}
{
"name": "Template 404",
"tag":"section",
"class":"flex flex-col items-center text-center justify-center h-screen",
"settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "404"
    },
    {
        "type": "text",
        "id": "subtext",
        "label": "Subtext",
        "default": "The page you were looking for does not exist"
    },
    {
        "type":"text",
        "id":"button_label",
        "label":"Button Label",
        "default":"Back to home"
    },
    {
        "type":"url",
        "id":"button_url",
        "label":"Button URL"
    }
 ]
}
{% endschema %}