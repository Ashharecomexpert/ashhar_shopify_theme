<div class="flex flex-col items-center my-8">
    <h1 class="text-3xl font-bold text-center">{{section.settings.title}}</h1>
    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
            {% for collection in collections %}
                {% if collection.all_products_count > 0 %}
                    <div class="w-full py-5 px-3">
                         <div class="border bg-white overflow-hidden shadow-md">
                            <a href="{{ collection.url }}">
                                <div class="h-80 overflow-hidden">
                                    {% if collection.featured_image != blank %}
                                        {% assign collectin_image = collection.featured_image %}
                                    {% else %}
                                        {% assign collectin_image = collection.products.first.image %}
                                    {% endif %}
                                    <img class="w-full h-full object-cover duration-300 hover:scale-105 transition-all transform" src="{{ collectin_image | image_url: width: 500 }}" alt="{{ collection.image.alt }}" width="" height="">
                                </div>
                            </a>
                            <div class="p-2 bg-gray-100">
                               <h1 class="text-xl ">{{collection.title}}</h1>
                            </div>
                        </div> 
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% schema %}
{
    "name": "Template List Collections",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Collections"
        }
    ]
}
{% endschema %}

