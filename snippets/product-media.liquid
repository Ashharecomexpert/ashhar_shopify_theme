{% case media.media_type %}
    {% when 'image' %}
    <img class="w-full h-full object-cover" src="{{media | image_url: width: 1000}}" alt="{{media.preview_image.alt}}"
        width="" height="">
    {% when 'external_video' %}
    <div class="video-wrapper">
       {{media | external_video_tag: class: 'w-full h-90 object-cover' }}
    </div>
    {% when 'video' %}
       {{media | video_tag:controls: true, class: 'w-full h-full object-cover' }}
    {% when 'model' %}
       {{media | model_viewer_tag: class: 'w-full h-90 object-cover' }}
    {% else %}
      {{media |  media_tag}}
{% endcase %}